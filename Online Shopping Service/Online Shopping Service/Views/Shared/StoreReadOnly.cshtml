    <title>StoreReadOnly</title>
</head>
<body>
    <h1>Store Browse</h1>
    <br />
    <table id="items" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Count Remaining</th>
                <th>Add to cart</th>
            </tr>
        </thead>
        <tbody>
