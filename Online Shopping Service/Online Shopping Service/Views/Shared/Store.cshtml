@model Online_Shopping_Service.ViewModels.StoreViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Store</title>
</head>
<body>
    <h1>Store Browse</h1>
    <table id="items" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
                <th>Count Remaining</th>
                <th>Add to cart</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "EditItem", "Admins", new { id = item.ID }, null)</td>
                    <td>@item.Price</td>
                    <td>@item.RemainingCount</td>
                    <td>
                        <button data-item-id="@item.ID" class="btn-link js-add">Add to cart</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#items").on("click", ".js-add", function () {
                $.ajax({
                    url: "api/User/AddToCart/" + $(this).attr("data-item-id"),
                    method: "GET",
                    success: console.log("Add to cart success")
                });
            });
        });
    </script>
}