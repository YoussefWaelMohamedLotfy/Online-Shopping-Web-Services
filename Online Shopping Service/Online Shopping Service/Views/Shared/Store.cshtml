</html>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#items").DataTable({
                ajax: {
                    url: "/api/User/GetItems",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Name",
                        render: function (data, type, item) {
                            return "<a href='/api/" + item.ID + "'>" + item.Name + "</a>";
                        }
                    },
                    {
                        data: "Price"
                    },
                    {
                        data: "RemainingCount"
                    },
                    {
                        data: "ID",
                        render: function (data) {
                            return "<button class='btn-link js-add' data-item-id=" + data + ">Add to cart</button>";
                        }
                    }
                ]
            });

            $("#items").on("click", ".js-add", function () {
                $.ajax({
                    url: "api/User/AddToCart/" + $(this).attr("data-item-id"),
                    method: "GET",
                    success: console.log("Add to cart success")
                });
            });
        });
    </script>
}